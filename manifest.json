{
  "manifest_version": 3,
  "name": "Search Commander",
  "version": "1.0",
  "description": "Custom search commands extension with editable shortcuts",
  "permissions": ["tabs", "storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+Shift+P",
        "mac": "Alt+Shift+P"
      }
    }
  },
  "omnibox": {
    "keyword": "sc"
  },
  "background": {
    "service_worker": "background.js"
  }
}